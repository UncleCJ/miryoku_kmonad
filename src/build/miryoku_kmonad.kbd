(defcfg
  input (device-file "/dev/input/event3")
  output (uinput-sink "Miryoku KMonad output")
  fallthrough true
)
(defsrc
  q w e r t y u i o p
  a s d f g h j k l ;
  z x c v b n m , . /
                esc spc tab ent bspc del
  '
)
(deflayer U_BASE
q	w	e	r	t	y	u	i	o	p
(tap-hold-next-release 600 a met)	(tap-hold-next-release 600 s alt)	(tap-hold-next-release 600 d ctl)	(tap-hold-next-release 600 f sft)	g	h	(tap-hold-next-release 600 j sft)	(tap-hold-next-release 600 k ctl)	(tap-hold-next-release 600 l alt)	(tap-hold-next-release 600 ' met)
z	(tap-hold-next-release 600 x ralt)	c	v	b	n	m	,	(tap-hold-next-release 600 . ralt)	/
		esc	(tap-hold-next-release 600 spc (layer-toggle U_NAV))	tab	ent	bspc	del
;
)
(deflayer U_NAV
XX	XX	XX	XX	XX	again	S-ins	C-ins	S-del	undo
met	alt	ctl	sft	XX	left	down	up	right	caps
XX	ralt	XX	(layer-switch U_NAV)	XX	home	pgdn	pgup	end	ins
		XX	XX	XX	ent	bspc	del
;
)

